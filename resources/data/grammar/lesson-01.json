{
  "grammar_points": [
    {
      "id": "mnn-01-grammar-001",
      "lesson_id": "mnn-lesson-01",
      "name": {
        "japanese": "N1 は N2 です。",
        "english": "N1 is N2."
      },
      "pattern": "N1 は N2 です。",
      "usage": "Basic sentence structure for stating what something is",
      "explanation": "The topic marker は (wa) introduces what we're talking about, and です (desu) is the polite copula meaning 'to be'",
      "jlpt_level": "N5",
      "examples": [
        {
          "sentence": {
            "japanese": "私は学生です。",
            "furigana": "{私|わたし}は{学生|がく|せい}です。",
            "english": "I am a student."
          },
          "context": "Self-introduction",
          "notes": "わたし (watashi) is the humble form of 'I'"
        },
        {
          "sentence": {
            "japanese": "これは本です。",
            "furigana": "これは{本|ほん}です。",
            "english": "This is a book."
          },
          "context": "Identifying objects"
        }
      ],
      "related_grammar": ["mnn-01-grammar-002"]
    },
    {
      "id": "mnn-01-grammar-002", 
      "lesson_id": "mnn-lesson-01",
      "name": {
        "japanese": "N1 は N2 じゃ (では) ありません",
        "english": "N1 is not N2."
      },
      "pattern": "N1 は N2 じゃ (では) ありません",
      "usage": "Negative form of the basic 'X is Y' pattern",
      "explanation": "ではありません (dewa arimasen) is the polite negative form of です (desu)",
      "jlpt_level": "N5",
      "examples": [
        {
          "sentence": {
            "japanese": "私は先生ではありません。",
            "furigana": "{私|わたし}は{先生|せん|せい}ではありません。",
            "english": "I am not a teacher."
          },
          "context": "Correcting or clarifying information"
        }
      ],
      "related_grammar": ["mnn-01-grammar-001"]
    },
    {
      "id": "mnn-01-grammar-003",
      "lesson_id": "mnn-lesson-01",
      "name": {
        "japanese": "N1 は N2 ですか。",
        "english": "N1 is N2?"
      },
      "pattern": "N1 は N2 ですか。",
      "usage": "Question form of the basic 'X is Y' pattern",
      "explanation": "ですか (desu ka) is the polite form of です (desu) used in questions",
      "jlpt_level": "N5",
      "examples": [
        {
          "sentence": {
            "japanese": "山田さんは先生ですか。",
            "furigana": "{山田|やま|だ}さんは{先生|せん|せい}ですか。",
            "english": "Is Mr. Yamada a teacher?"
          },
          "context": "Asking for confirmation"
        }
      ],
      "related_grammar": ["mnn-01-grammar-001"]
    },
    {
      "id": "mnn-01-grammar-004",
      "lesson_id": "mnn-lesson-01",
      "name": {
        "japanese": "N も",
        "english": "N also"
      },
      "pattern": "N も",
      "usage": "Adding 'also' to a sentence",
      "explanation": "も (mo) is used to add 'also' to a sentence",
      "jlpt_level": "N5",
      "examples": [
        {
          "sentence": {
            "japanese": "山田さんは先生です。田中さんも先生です。",
            "furigana": "{山田|やま|だ}さんは{先生|せん|せい}です。{田中|た|なか}さんも{先生|せん|せい}です。",
            "english": "Mr. Yamada is a teacher. Mr. Tanaka is also a teacher."
          },
          "context": "Adding 'also' to a sentence"
        }
      ],
      "related_grammar": ["mnn-01-grammar-001"]
    },
    {
      "id": "mnn-01-grammar-005",
      "lesson_id": "mnn-lesson-01",
      "name": {
        "japanese": "N1 の N2",
        "english": "N1's N2"
      },
      "pattern": "N1 の N2",
      "usage": "N1 modifies N2 (N1's N2)",
      "explanation": "One usage of の is to indicate possession (N1's N2)",
      "jlpt_level": "N5",
      "examples": [
        {
          "sentence": {
            "japanese": "山田さんの本",
            "furigana": "{山田|やま|だ}さんの{本|ほん}",
            "english": "Mr. Yamada's book"
          },
          "context": "Indicating possession"
        }
      ],
      "related_grammar": ["mnn-01-grammar-001"]
    },
    {
      "id": "mnn-01-grammar-006",
      "lesson_id": "mnn-lesson-01",
      "name": {
        "japanese": "〜さん",
        "english": "Mr. / Ms. / Mrs. / Miss"
      },
      "pattern": "〜さん",
      "usage": "Adding 'Mr.' or 'Ms.' to a name",
      "explanation": "〜さん (san) is used to add 'Mr.' or 'Ms.' to a name",
      "jlpt_level": "N5",
      "examples": [
        {
          "sentence": {
            "japanese": "山田さん",
            "furigana": "{山田|やま|だ}さん",
            "english": "Mr. Yamada"
          },
          "context": "Adding 'Mr.' to a name"
        }
      ],
      "related_grammar": ["mnn-01-grammar-001"]
    }
  ]
} 